<article
  class="grid grid-cols-[1fr_auto] md:grid-cols-[180px_1fr] lg:grid-cols-[224px_1fr] gap-0 pl-5 md:pl-0 pr-0 py-4 bg-blue-25 md:bg-transparent"
>
  <div
    class="md:bg-blue-25 md:px-4 md:py-4 md:h-[204px] lg:h-[254px] md:relative"
  >
    <div class="hidden md:block md:absolute top-0 right-0" aria-hidden="true">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="32"
        height="32"
        viewBox="0 0 32 32"
        class="text-white"
        aria-hidden="true"
      >
        <polygon points="0 0 32 0 32 32" fill="currentColor" stroke-width="0" />
      </svg>
    </div>
    <div class="flex flex-col gap-3" aria-label="Textinhalt der Dozentin">
      <h2 class="text-xl md:text-lg xl:text-2xl text-magenta-500">
        {{ name }}
      </h2>
      <p
        class="mt-0 text-blue-500 md:group-hover:text-white text-base lg:text-sm xl:text-base lg:leading-tight xl:leading-tight"
        aria-label="Kurzbeschreibung der Dozentin"
      >
        {{ bio }}
      </p>
    </div>
  </div>
  {% include 'partials/picture.liquid' directory: '/assets/images' file_name: id
  sizes: '400 800' image_alt: 'Bild von {{ name }}' width: '800' height: '800'
  class: 'w-24 md:w-full md:order-first -translate-y-16 md:-translate-y-[28px]
  lg:-translate-y-[35px]' %}
</article>
