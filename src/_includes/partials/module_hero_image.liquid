<figure
  class="relative {% if class %}{{ class }}{% endif %}"
>
  <picture>
    <source
      srcset="/assets/images/modules/{{ module_number }}/hero-800.webp 800w"
      media="(min-width: 1024px)"
      type="image/webp"
    />
    <source
      srcset="/assets/images/modules/{{ module_number }}/hero-800.png 800w"
      media="(min-width: 1024px)"
      type="image/png"
    />
    <source
      srcset="/assets/images/modules/{{ module_number }}/hero-400.webp 400w"
      type="image/webp"
    />
    <source
      srcset="/assets/images/modules/{{ module_number }}/hero-400.png 400w"
      type="image/png"
    />
    <img
      src="/assets/images/modules/{{ module_number }}/hero-800.png"
      alt="{{ image_alt }}"
      loading="lazy"
    />
  </picture>
  {% if has_outline %}
    {%- comment -%} TODO: change this to dynamic partial {%- endcomment -%}
    {% include 'partials/module_01_outline.liquid' class: 'absolute top-0 left-0 w-full h-auto' %}
  {% endif %}
</figure>
